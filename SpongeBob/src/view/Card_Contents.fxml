<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="490.0" prefWidth="862.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.CardContentsController">
   <children>

      <!-- Fond -->
      <ImageView fitHeight="500.0" fitWidth="883.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../resource/image/kitchen.png" />
         </image>
      </ImageView>

      <!-- Menu -->
      <ImageView fitHeight="361.0" fitWidth="590.0" layoutX="155.0" layoutY="50.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../resource/image/menuH.png" />
         </image>
      </ImageView>

      <!-- Sous-titre -->
      <Text fx:id="subjectText" fill="WHITE" layoutX="373.0" layoutY="113.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Subject">
         <font>
            <Font name="Krabby Patty" size="36.0" />
         </font>
      </Text>

      <!-- Label pour le compte à rebours -->
      <Label fx:id="timerLabel" layoutX="25.0" layoutY="22.0" text="00:10" textFill="WHITE">
         <font>
            <Font name="Krabby Patty" size="36.0" />
         </font>
      </Label>

      <!-- Mr Krabs décoratif -->
      <ImageView fitHeight="280.0" fitWidth="274.0" layoutX="598.0" layoutY="209.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../resource/image/mrKrabs2.png" />
         </image>
      </ImageView>
      <ImageView fx:id="nextGreyImage" fitHeight="73.0" fitWidth="78.0" layoutX="408.0" layoutY="394.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../resource/image/nextGrey.png" />
         </image>
      </ImageView>
      <ImageView fx:id="nextImage" fitHeight="73.0" fitWidth="78.0" layoutX="408.0" layoutY="394.0" onMouseClicked="#onSeeAnswerClicked" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../resource/image/next.png" />
         </image>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </ImageView>
      <Label fx:id="questionText"  wrapText="true" alignment="TOP_CENTER" layoutX="199.0" layoutY="145.0" maxHeight="234.0" maxWidth="490.0" minHeight="100.0" minWidth="100.0" prefHeight="206.0" prefWidth="490.0" text="text" textFill="#a4520a" textOverrun="CLIP">
         <font>
            <Font name="Krabby Patty" size="28.0" />
         </font>
      </Label>

   </children>
</AnchorPane>
