            <Object[]>{633, 83, "ananas"}</Object[]>
            <Object[]>{559, 32, "ananas"}</Object[]>
         </Array>
      </fx:define>
      
      <!-- Génération dynamique des ImageView -->
      <fx:repeat items="${tiles}" var="tile">
         <ImageView fitHeight="70.0" fitWidth="70.0" layoutX="${tile[0]}" layoutY="${tile[1]}" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@../ressources/${tile[2]}.png" />
            </image>
         </ImageView>
      </fx:repeat>
      
   </children>
