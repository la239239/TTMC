   <children>
      <!-- Image de fond -->
      <ImageView fitHeight="552.0" fitWidth="879.0" layoutX="-2.0" layoutY="-1.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../ressources/background.png" />
         </image>
      </ImageView>
      
      <!-- Définition d'un tableau pour générer dynamiquement les images -->
      <fx:define>
         <Array fx:id="tiles">
            <!-- Chaque ligne représente une position (x, y) et un type d'image -->
            <Object[]>{195, 87, "ananas"}</Object[]>
            <Object[]>{634, 346, "pants"}</Object[]>
            <Object[]>{195, 187, "sponge"}</Object[]>
